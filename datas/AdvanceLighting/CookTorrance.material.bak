}

fragment_program CookTorranceFragmentShader glsl
{
	source CookTorrance.frag
	
	default_params
	{
		param_named LightColor float4 1.0 1.0 1.0 1.0
		param_named DiffColor float4 0.8 0.8 0.8 1.0
		param_named SpecColor float4 0.8 0.8 0.8 1.0
		param_named Refractiable float 0.5
		param_named Dm float 0.5
		param_named Dc float 10.0
