vertex_program WarnLightingVertexShader glsl
{
	source WarnLighting.vert
	
	default_params
	{
		param_named_auto ogre_ModelViewProjectMatrix worldviewproj_matrix
		param_named_auto ogre_ModelViewMatrix worldview_matrix
		param_named_auto ogre_NormalMatrix inverse_transpose_worldview_matrix
		param_named LightPos float4 0.0 3.0 0.0 1.0
	}
}

fragment_program WarnLightingFragmentShader glsl
{
	source WarnLighting.frag
	
	default_params
	{
		param_named LightColor float4 1.0 1.0 1.0 1.0
		param_named DiffDensity float 1.0
		param_named WarnExponent float 8.0
	}
}

material WarnLightingMaterial
{
	technique
	{
		pass
		{
			vertex_program_ref WarnLightingVertexShader
			{
			}
			
			fragment_program_ref WarnLightingFragmentShader
			{
			}
		}
	}
}